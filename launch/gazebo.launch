<launch>

    <!-- Gazebo Arguments -->
    <arg name="debug" default="false"/>
    <arg name="gui" default="true"/>
    <arg name="pause" default="false"/>
    <arg name="world" value="$(find Artemis)/worlds/small_warehouse.world"/>

    <!-- Husky Arguments -->
    <arg name="x"  default="-1.25" />
    <arg name="y"  default="-4.0" />
    <arg name="z"  default="0.256" />
    <arg name="yaw"  default="0" />

    <!-- Gazebo Node -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" default="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="paused" value="$(arg pause)"/>
        <arg name="use_sim_time" value="true"/>
    </include>

    <!-- Spawn Husky Node -->
    <include file="$(find husky_gazebo)/launch/spawn_husky.launch">
        <arg name="x" default="$(arg x)"/>
        <arg name="y" default="$(arg y)"/>
        <arg name="z" default="$(arg z)"/>
        <arg name="yaw" default="$(arg yaw)"/>
    </include>

    <!-- Fake Localization -->
    <node pkg="fake_localization" type="fake_localization" name="fake_localization" />
    
    <!-- Map Server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(find Artemis)/maps/small_warehouse.yaml"/>

    <!-- Move Base -->
    <include file="$(find husky_navigation)/launch/move_base.launch" />

    <!-- Spawn Cargo -->
    <node name="spawn_sdf" pkg="gazebo_ros" type="spawn_model" args="-sdf -file $(find Artemis)/models/aruco_box_1/model.sdf -model Box_Aruco_1 -x -0.375 -y 5.558 -z 0.109 -R 0 -P 0 -Y 0"  />

    <!-- Aruco Detect -->
    <include file="$(find aruco_detect)/launch/aruco_detect.launch">
        <arg name="camera" value="/realsense/color" />
        <arg name="image" value="image_raw" />
        <arg name="transport" value="compressed" />
        <arg name="dictionary" value="3" />
        <arg name="fiducial_len" value="0.15" />
    </include>

    <!-- Rviz Node -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find Artemis)/rviz/artemis.rviz"/>

</launch>